---
import Layout from "@/layouts/Layout.astro";

import ProjectList from "@/modules/projects/ProjectList/ProjectList.astro";

import Counter from "@/components/Counter/Counter.vue";

import Coin from "@/assets/icons/coin.astro";

import SectionLayout from "@/UI/SectionLayout.astro";
import TwoColumnLayout from "@/UI/TwoColumnLayout.astro";
import PrimaryContain from "@/UI/PrimaryContain.astro";

import { PEDROYANEZNAME } from "@/consts/const";

const title = `${PEDROYANEZNAME} - Proyectos`; //TODO: aplicar internalizaci√≥n
---

<Layout title={title}>
  <SectionLayout sectionTitle="Proyectos">
    <TwoColumnLayout>
      <PrimaryContain>
        <ProjectList />

        <hr />

        <div class="flex items-center gap-1 transition hover:scale-105">
          <div class="h-6 w-6">
            <Coin />
          </div>

          <Counter
            client:visible
            transition:persist="counter"
            initialValue={0}
            transition:persist-props
          />
        </div>
      </PrimaryContain>
    </TwoColumnLayout>
  </SectionLayout>
</Layout>
